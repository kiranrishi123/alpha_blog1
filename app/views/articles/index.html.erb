<h1>Listing the Articles</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Descprition</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
		<tr>
			<td><%= article.articles %></td>
			<td><%= article.descprition %></td>
			<td> <%= link_to 'Show', article_path(article) %></td>
			<td> <%= link_to 'Edit', edit_article_path(article), method: :PATCH %></td>
			<td><%= button_to 'Delete', article_path(article), method: :delete %></td>
			
		</tr>
		<% end %>
	</tbody>
	

</table>

