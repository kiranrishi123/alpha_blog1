<h1>Create a new Article</h1>

<%  if @article.errors.any? %>
<h2>To Save This Article u need to follow these instructions</h2>
<ul>
	<% @article.errors.full_messages do |msg| %>

	<li><% msg %></li>

 	<% end %>
</ul>
<% end %>

<%= form_with scope: :article , url: articles_path, local: true do |f| %>

<p>
	<%= f.label :articles %> <br>
	<%= f.text_field :articles %>
</p>
<p>
	<%= f.label :descprition %> <br>
	<%= f.text_area :descprition %>
</p>

<p>
	<%= f.submit %>
</p>

<% end %>

